# Firebase Configuration
# IMPORTANT: Create a .env.local file with your actual Firebase credentials
# DO NOT commit the .env.local file to version control
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Google OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-at-least-32-chars-long

# JWT Configuration
JWT_SECRET=your-jwt-secret-at-least-32-chars-long
JWT_EXPIRY=1h

# CSRF Protection
CSRF_SECRET=your-csrf-secret-at-least-32-chars-long

# Site Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Rangya

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your-ga-measurement-id
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Admin Credentials (for development only)
# WARNING: Change these in production
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=StrongPassword123!

# Firebase Emulator Settings
# Set to 'true' to use Firebase emulators for local development
USE_FIREBASE_EMULATOR=false

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Content Security Policy
# Set to 'true' to enable strict CSP in production
ENABLE_STRICT_CSP=false

# Firebase Admin SDK (Service Account)
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYour Private Key Here\n-----END PRIVATE KEY-----\n"
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxx@your-project.iam.gserviceaccount.com

# Deployment
NODE_ENV=development
# NODE_ENV=production

# Bundle Analysis
# ANALYZE=true