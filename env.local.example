# Core Environment Variables
NODE_ENV=development
NEXT_PUBLIC_SITE_URL=http://localhost:3000
PORT=3000

# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your-firebase-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-app.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-app-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-app-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your-messaging-sender-id
NEXT_PUBLIC_FIREBASE_APP_ID=your-firebase-app-id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your-measurement-id

# Firebase Admin (Server-side)
FIREBASE_ADMIN_PROJECT_ID=your-app-id
FIREBASE_ADMIN_CLIENT_EMAIL=your-client-email
FIREBASE_ADMIN_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nXXXX...\n-----END PRIVATE KEY-----\n"

# Authentication
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-at-least-32-chars
JWT_SECRET=your-jwt-secret-at-least-32-chars
JWT_EXPIRY=86400
CSRF_SECRET=your-csrf-secret-at-least-32-chars

# Google OAuth (Optional)
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Email Service
EMAIL_FROM=noreply@rangya.com
SUPPORT_EMAIL=support@rangya.com
EMAIL_HOST=smtp.mailtrap.io
EMAIL_PORT=2525
EMAIL_SECURE=false
EMAIL_USER=your-smtp-username
EMAIL_PASSWORD=your-smtp-password

# Payment Processing (Optional)
RAZORPAY_KEY_ID=your-razorpay-key-id
RAZORPAY_KEY_SECRET=your-razorpay-key-secret
PAYMENT_WEBHOOK_SECRET=your-webhook-secret

# Analytics and Monitoring (Optional)
NEXT_PUBLIC_GA_ID=your-ga-id
NEXT_PUBLIC_SENTRY_DSN=your-sentry-dsn

# Media and Storage (Optional)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_API_KEY=your-cloudinary-api-key
CLOUDINARY_API_SECRET=your-cloudinary-api-secret
NEXT_PUBLIC_UPLOAD_PRESET=rangya_uploads

# API Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=60

# Development Tools
NEXT_PUBLIC_SHOW_DEVTOOLS=false
ANALYZE_BUNDLE=false
DEBUG=false

# Site Configuration
NEXT_PUBLIC_BASE_URL=http://localhost:3000
NEXT_PUBLIC_SITE_NAME=Rangya

# Analytics
NEXT_PUBLIC_GA_MEASUREMENT_ID=your-ga-measurement-id
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX

# Admin Credentials (for development only)
# WARNING: Change these in production
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=StrongPassword123!

# Firebase Emulator Settings
# Set to 'true' to use Firebase emulators for local development
USE_FIREBASE_EMULATOR=false

# Content Security Policy
# Set to 'true' to enable strict CSP in production
ENABLE_STRICT_CSP=false